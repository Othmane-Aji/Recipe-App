<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5"
    android:gravity="center_horizontal">

    <!-- Titre de la recette -->
    <TextView
        android:id="@+id/recipeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/recipe_name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- CardView pour afficher les ingrédients -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardIngredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp">

        <TextView
            android:id="@+id/ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/ingredients"
            android:textColor="#555555"
            android:textSize="18sp" />
    </androidx.cardview.widget.CardView>

    <!-- CardView pour afficher les étapes -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardSteps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp">

        <TextView
            android:id="@+id/steps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/steps"
            android:textColor="#555555"
            android:textSize="18sp" />
    </androidx.cardview.widget.CardView>

    <!-- Button pour supprimer la recette -->
    <Button
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF5252"
        android:text="@string/delete_recipe"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp"/>

    <!-- Button pour éditer la recette -->
    <Button
        android:id="@+id/btnEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CAF50"
        android:text="@string/edit_recipe"
        android:textColor="#FFFFFF" />

</LinearLayout>
